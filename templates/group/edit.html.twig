{% extends 'edit.html.twig' %}

{% block breadcrumb %}
	<li class="breadcrumb-item"><a href="list_groups.php">Groups</a></li>
	<li class="breadcrumb-item"><a href="group.php?gid={{ group.name }}">{{ group.name }}</a></li>
	<li class="breadcrumb-item active">{{ header }}</li>
{% endblock %}

{% block immutable %}
	<div class="form-group row">
		<label class="col-sm-3 col-form-label">Group</label>
		<div class="col-sm-9">
			<label class="col-form-label">{{ group.name }}</label>
			<input type="hidden" name="gid" value="{{ group.name }}"/>
		</div>
	</div>
{% endblock %}

{% block cancelURL %}group.php?gid={{ group.name }}{% endblock %}